@using WebApplication11.Models
@model EditFurnitureViewModel

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 jumbotron">
                <form method="post" action="/furniture/edit">
                    <input type="text" value="@Model.FurnitureItem.Name" name="name" placeholder="Name" class="form-control mt-2" />
                    <input type="text" value="@Model.FurnitureItem.Color" name="color" placeholder="Color" class="form-control mt-2" />
                    <input type="text" value="@Model.FurnitureItem.Price" name="price" placeholder="Price" class="form-control mt-2" />
                    <input type="text" value="@Model.FurnitureItem.QuantityInStock" name="quantityinstock" placeholder="Quantity" class="form-control mt-2" />
                    <input type="hidden" value="@Model.FurnitureItem.Id" name="id" />
                    <button class="btn btn-primary btn-block mt-2">Update</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>